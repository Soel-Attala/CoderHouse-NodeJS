<div style="width: 600px; margin: 50px;  padding: 10px; border: 1px solid; border-radius: 10px; text-align: center; background-color: #352c2c">
    <h1 style="color:blue;">Agregue aqui sus productos</h1>
    <br>

    <form action="/products/add" method="post">

        <div class="mb-3 row">
            <label for="inputTitle" class="col-sm-2 col-form-label" style="color: aliceblue">Nombre</label>
            <div class="col-sm-10">
                <input type="text" name="title" class="form-control" id="inputTitle" style="background-color: #808080" />
            </div>
        </div>
        <div class="mb-3 row">
            <label for="inputPrice" class="col-sm-2 col-form-label" style="color: aliceblue">Precio</label>
            <div class="col-sm-10">
                <input style="background-color: #808080"
                       type="number"
                       name="price"
                       class="form-control"
                       id="inputPrice" />
            </div>
        </div>

        <table class="table table-dark table-sm">
            <div class="mb-3 row">
                <label for="inputThumbnail" class="col-sm-2 col-form-label" style="color: aliceblue">URL foto</label>
                <div class="col-sm-10">
                    <input style="background-color: #808080"
                           type="text"
                           name="thumbnail"
                           class="form-control"
                           id="inputThumbnail" />
                </div>
            </div>
        </table>


        <div class="col-auto">
            <button type="submit" class="btn btn-success ms-4" style="background-color: blue">Agregar producto</button>
            <a href="/products/list" class="btn btn-success ms-4" style="background-color: blue">
                Ver lista completa
            </a>
        </div>
    </form>
</div>


